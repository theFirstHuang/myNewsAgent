# ========================================
# LLM News Digest Agent - Environment Variables
# ========================================
#
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env to git!

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-api-key-here

# Gmail SMTP Configuration
# ⚠️ IMPORTANT: Use Gmail App Password, NOT your regular password!
# Generate at: https://myaccount.google.com/apppasswords
# (You need 2-Step Verification enabled)
GMAIL_APP_PASSWORD=your-16-char-app-password-here

# Optional: Anthropic API (if you want to use Claude instead)
# ANTHROPIC_API_KEY=sk-ant-your-key-here

# Optional: HuggingFace Token (for private datasets/models)
# HF_TOKEN=hf_your_token_here

# Optional: Custom API endpoints
# OPENAI_BASE_URL=https://api.openai.com/v1
# OPENAI_ORG_ID=org-your-org-id

# Debug mode (set to true for verbose logging)
DEBUG=false
